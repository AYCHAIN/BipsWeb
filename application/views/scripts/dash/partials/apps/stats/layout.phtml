  <div id="stats-container">
    <div class="row" style="border-bottom: 1px dashed #eee;margin-bottom: 20px;">

			<div class="offset1 span2 stat-metric middle" id="metric-users">
          <h1 class="metric-value"></h1>
          <p># Users</p>
      </div>

			<div class="span2 stat-metric middle" id="metric-bips">
          <h1 class="metric-value"></h1>
          <p># Bips</p>
      </div>

			<!-- div class="span2 stat-metric middle" id="metric-distinct-bips">
